<?xml version="1.0" encoding="utf-8" ?>
<odoo>
  <data>
    <!-- explicit list view definition -->

    <record model="ir.ui.view" id="wt_ultramsg_updates_list">
      <field name="name">Ultramsg Updates List</field>
      <field name="model">ultramsg.update</field>
      <field name="arch" type="xml">
        <tree>
          <field name="create_date"/>
          <field name="instance_id"/>
        </tree>
      </field>
    </record>

    <!-- explicit form view definition -->

    <record id="wt_ultramsg_update_form" model="ir.ui.view">
      <field name="name">Ultramsg Updates Form</field>
      <field name="model">ultramsg.update</field>
      <field name="arch" type="xml">
        <form string="Barq Call" edit="0" create="false">
          <sheet>
            <group>
              <field name="create_date"/>
              <field name="instance_id"/>
            </group>
            <notebook>
              <page string="Raw Data">
                <field name="raw_data"/>
              </page>
            </notebook>
          </sheet>
        </form>
      </field>
    </record>
    <!-- actions -->

    <record model="ir.actions.act_window" id="wt_ultramsg_update_action_window">
      <field name="name">Ultramsg Updates</field>
      <field name="res_model">ultramsg.update</field>
      <field name="view_mode">tree,form</field>
      <field name="help" type="html">
        <p class="o_view_nocontent_smiling_face">
              No Result
        </p>
      </field>
    </record>

  </data>
</odoo>